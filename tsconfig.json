{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "downlevelIteration": true,
    "lib": ["esnext", "dom"],
    "declaration": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "declarationDir": "dist/types",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true
  },
  "include": ["lib", "*.ts"],
  "exclude": ["node_modules", "tsconfig.cjs.json"]
}
